<!DOCTYPE html>

<html lang="en">

<head>
	<!-- требуемые мета-теги -->
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=l, shrink-to-fit=no" />
    <link href="./css/site.css" rel="stylesheet"/>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
	<title>@ViewData["Title"]</title>
</head>

<body>
    <!-- Навигационное меню (navbar) -->    
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Movie</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" asp-page="/Index">Кинотеатр</a>
                </li>
                @if (User.Identity.IsAuthenticated)
                {
                    @if (User.IsInRole("admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Movies/Index">Фильмы в кинотеатре</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/HallsCinema/Index">Залы кинотеатра</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Shedules/Index">Расписание</a>
                        </li>
                    }
                    else if (User.IsInRole("user"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Shedules/Index">Расписание</a>
                        </li>
                    }

                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Account/Logout">Выйти</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Account/Login">Войти</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Account/Register">Зарегистрироваться</a>
                    </li>
                }
                
            </ul>
        </div>
    </nav>

	<div class="container">
		@RenderBody()      

		<hr />
		
	</div>
	<!-- JavaScript-код для включения таких функций, как карусель -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" 
			integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslKleN7N6jIeHz"
			crossorigin="anonymous"></script>
	@RenderSection("Scripts", required: false)
</body>
</html>

